@model DoAn2.ViewModels.FoodViewModel



@foreach (var item in Model.ThucPhams)
{
    <div class="col mb-5">
        <div class="card h-100">
            <!-- Product image-->
            <img class="card-img-top" src="~/images/@item.HinhAnh" alt="..." height="200px" width="300px" />
            <!-- Product details-->
            <div class="card-body p-4">
                <div class="text-center">
                    <!-- Product name-->
                    <h5 class="fw-bolder">@item.TenTp</h5>
                    @item.GiaTp VND
                </div>
            </div>
            <!-- Product actions-->
            <div class="card-footer p-4 pt-0 border-top-0 bg-transparent">
                <!--<div class="text-center">
                    <a class="btn btn-outline-dark mt-auto" onclick="confirmDelete('@item.MaTp')">
                        <i class="fa-solid fa-trash"></i>Delete
                    </a>
                </div>
                <div class="card-footer p-4 pt-0 border-top-0 bg-transparent">
                    <div class="text-center">
                        <a class="btn btn-outline-dark mt-auto" onclick="editItem('@item.MaTp')">
                            <i class="fa-solid fa-pencil"></i>Edit
                        </a>
                    </div>
                </div>-->
                <div class="col-md-offset-4 col-md-8">
                    <a class="btn btn-danger" href="/them-gio-hang?ProductId=@item.MaTp&Quantity=1">
                        <i class="fa fa-spin fa-spinner"></i> Mua
                        ngay
                    </a>
                </div>
            </div>
        </div>
    </div>
}
<script>
    function confirmDelete(maTp) {
        if (confirm("Are you sure you want to delete this item?")) {
            $.ajax({
                url: '/Food/Delete',
                type: 'POST',
                data: { maTp: maTp },
                success: function (response) {
                    if (response.success) {
                        // Reload page or update UI as needed
                        location.reload();
                    } else {
                        console.error('Failed to delete item:', response.error);
                    }
                },
                error: function (xhr, status, error) {
                    console.error('Error:', error);
                }
            });
        }
    }

    function editItem(maTp) {
        // Redirect to the edit page with the MaTp parameter
        window.location.href = '/Food/Edit/?maTp=' + maTp;
    }
</script>