@model DoAn2.ViewModels.UserViewModel
@{
    ViewData["Title"] = "Register";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="panel panel-primary">
    <div class="panel-heading panel-heading-prod"><i class="fa fa-spinner faspin"></i> Đăng ký thành viên</div>
    <div class="panel-body">
        @if (!string.IsNullOrEmpty(ViewBag.ErrorMessage))
        {
            <div class="alert alert-danger" role="alert">
                @ViewBag.ErrorMessage
            </div>
        }
        <form class="form form-horizontal" asp-action="Register" asp-controller="User" method="POST">

            <div class="form-group">
                <label asp-for="Register.Sdt" class="col-md-3 control-label">Số điện thoại</label>
                <div class="col-md-9">
                    <input class="form-control" asp-for="Register.Sdt" placeholder="Nhập số điện thoại" input type="number" autofocus required
                           pattern="(?:(?:\+?1\s*(?:[.-]\s*)?)?(?:(\s*([2-9]1[02-9]|[2-9][02-8]1|[2-9][02-8][02-9]‌​)\s*)|([2-9]1[02-9]|[2-9][02-8]1|[2-9][02-8][02-9]))\s*(?:[.-]\s*)?)([2-9]1[02-9]‌​|[2-9][02-9]1|[2-9][02-9]{2})\s*(?:[.-]\s*)?([0-9]{4})\s*(?:\s*(?:#|x\.?|ext\.?|extension)\s*(\d+)\s*)?$"
                           title= "Nhập đúng định dạng số điện thoại"/>
                    <span asp-validation-for="Register.Sdt" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group">
                <label asp-for="User.HoTen" class="col-md-3 control-label">Họ Tên</label>
                <div class="col-md-9">
                    <input type="text" class="form-control" asp-for="User.HoTen" placeholder="Họ tên" required />
                    <span asp-validation-for="User.HoTen" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group">
                <label asp-for="User.Email" class="col-md-3 control-label">Email</label>
                <div class="col-md-9">
                    <input type="email" class="form-control" asp-for="User.Email" placeholder="Email" required />
                    <span asp-validation-for="User.Email" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group">
                <label asp-for="User.DiaChi" class="col-md-3 control-label">Địa chỉ</label>
                <div class="col-md-9">
                    <input type="email" class="form-control" asp-for="User.DiaChi" placeholder="Địa chỉ" />
                    <span asp-validation-for="User.DiaChi" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group">
                <label asp-for="User.NgaySinh" class="col-md-3 control-label">Ngày sinh</label>
                <div class="col-md-9">
                    <input type="date" class="form-control" asp-for="User.NgaySinh" placeholder="Ngày sinh"
                           min="1920-01-01" max="2016-01-01" />
                    <span asp-validation-for="User.NgaySinh" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group">
                <label asp-for="Register.MatKhau" class="col-md-3 control-label">Mật khẩu</label>
                <div class="col-md-9">
                    <input type="password" class="form-control" asp-for="Register.MatKhau" id="password" placeholder="Nhập mật khẩu" required pattern="(?=.*\d)(?=.*[a-z])(?=.*[A-Z]).{8,}"
                           title="Mật khẩu phải có ít nhất 8 ký tự, bao gồm ít nhất một chữ số, một chữ thường và một chữ hoa." />
                    <span asp-validation-for="Register.MatKhau" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group">
                <label class="col-md-3 control-label">Nhập lại mật khẩu:</label>
                <div class="col-md-9">
                    <input type="password" class="form-control" id="confirmPassword"
                           placeholder="Nhập lại mật khẩu" required
                           pattern="(?=.*\d)(?=.*[a-z])(?=.*[A-Z]).{8,}"
                           title="Mật khẩu phải có ít nhất 8 ký tự, bao gồm ít nhất một chữ số, một chữ thường và một chữ hoa."
                           oninput="checkPasswordMatch(this);" />
                    <div id="passwordMatchMessage"></div>
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-3 col-md-9">
                    <button type="submit" class="btn btn-danger">Đăng ký</button>
                </div>
            </div>
        </form>
    </div>
</div>


